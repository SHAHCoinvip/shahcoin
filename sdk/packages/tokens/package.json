{
  "name": "@shahcoin/tokens",
  "version": "1.0.0",
  "description": "SHAHCOIN Tokens SDK - SHI-20/ERC20-style token methods (create, mint, transfer)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "docs": "typedoc src/index.ts --out docs"
  },
  "dependencies": {
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@shahcoin/core": "workspace:*",
    "@shahcoin/wallet": "workspace:*",
    "@shahcoin/types": "workspace:*"
  },
  "keywords": [
    "shahcoin",
    "tokens",
    "shi-20",
    "erc20",
    "smart-contracts",
    "defi"
  ]
}
