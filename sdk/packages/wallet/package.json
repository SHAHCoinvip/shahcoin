{
  "name": "@shahcoin/wallet",
  "version": "1.0.0",
  "description": "SHAHCOIN Wallet SDK - Create, import, export wallets, sign transactions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "docs": "typedoc src/index.ts --out docs"
  },
  "dependencies": {
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bip44-constants": "^9.0.0",
    "crypto": "^1.0.1",
    "secp256k1": "^5.0.0",
    "bs58check": "^2.1.2"
  },
  "devDependencies": {
    "@types/bip32": "^4.0.0",
    "@types/bip39": "^3.0.0",
    "@types/crypto": "^1.4.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@shahcoin/core": "workspace:*",
    "@shahcoin/types": "workspace:*"
  },
  "keywords": [
    "shahcoin",
    "wallet",
    "cryptocurrency",
    "hd-wallet",
    "bip32",
    "bip39",
    "bip44"
  ]
}
